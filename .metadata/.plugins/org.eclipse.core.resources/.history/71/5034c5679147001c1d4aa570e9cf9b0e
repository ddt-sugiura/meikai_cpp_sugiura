#include<iostream>
using namespace std;
int main() {
	int x;
	int y;
	int z;
	x = 63;
	y = 18;
	z = 45;
	cout << "合計は" << x+y+z << "です。\n";
	cout << "平均は" << (x+y+z)/3 << "です。\n";
}
